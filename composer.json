{
    "name": "xhelo/multi-company-dev2qbo",
    "description": "Multi-company DevPos to QuickBooks Online sync API",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "guzzlehttp/guzzle": "^7.8",
        "vlucas/phpdotenv": "^5.6",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8081 -t public",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true
    }
}
